/* Body */
html {
	font-family: "Noto Serif", "Arial", "Helvetica", sans-serif;
}

body {
	color: var(--color-foreground);
	background-color: #fff;
}

h1, h2, h3, h4, h5, h6 {
	line-height: 1.1;
//	font-family: Verdana, Geneva, sans-serif;
	font-weight: bold;
	overflow-wrap: break-word;
	word-wrap: break-word;
	-ms-word-break: break-all;
	word-break: break-word;
	-ms-hyphens: auto;
	-moz-hyphens: auto;
	-webkit-hyphens: auto;
	hyphens: auto;
//	margin: initial;
}

h2 {
	font-size: 30px;
}

h3 {
	font-size: 20px;
}

a {
	// text-decoration: none;
	color: var(--color-foreground); }
	a:hover {
		color: var(--color-hover);
		border-bottom: 2px solid var(--color-border); }

blockquote {
	font-style: italic;
	margin-left: 1.5em;
	padding-left: 1em;
	border-left: 3px solid var(--color-main); }

img {
	max-width: 100%; }

/* Pre and Code */
pre {
	background-color: #f1f1f1;
	display: block;
	padding: 1em;
	overflow-x: auto; }

code {
	font-size: 0.9em;
	padding: 0 0.5em;
	background-color: #f1f1f1;
	white-space: pre-wrap; }

pre > code {
	padding: 0;
	background-color: transparent;
	white-space: pre; }

textarea {
	width: 100%; }

button // buttons, by default, should not have any specific styling so they can be used better semantically. for typical button-buttons, use .btn
	-webkit-appearance: none
	background: initial
	border: initial
	padding: initial
	color: inherit // FF bug

button, input[type="submit"], input[type="reset"], input[type="button"], label
	cursor: pointer

.button[disabled], button[disabled], input[type="submit"][disabled], input[type="reset"][disabled], input[type="button"][disabled] {
	cursor default
	color: var(--color-disabled)
}
// TODO: .btn = button-like styling, should not be used as button identifier
.btn, input[type="submit"], input[type="reset"], input[type="button"]
	display: inline-block
	// padding: 6px 13px
	padding: 0.5em 1.3em;
	text-align: center
	text-decoration: none
	// white-space: nowrap
	background-color: #f4f4f4
	color: var(--color-foreground)
	background-image: linear-gradient(rgba(255, 255, 255, 0.25) 50%, transparent 52%);
	box-sizing: border-box
	font-weight bolder
	transition all .1s linear
	position: relative
	border-radius 0
	box-shadow 1px 2px 5px -3px grey, -1px -1px 0px 0px #f3f3f3

	/** 3D effect via borders ********/
	$right_border_width = 3px
	$bottom_border_width = 2px
	$push_in_width = 2px
	border-style solid
	border-width 0 $right_border_width $bottom_border_width 0
	border-color transparent #ccc #bbb transparent
	background-clip padding-box
	// little transparent triangular spaces that cover the edges
	// so they actually look 3d
	&:before, &:after
		content: '';
		position: absolute;
		width: 0;
		height: 0;
		border-width: 0 5px 6px	0
		border-style: solid;
	&:before
		bottom: -5px;
		left: -1px;
		border-color: transparent;
		border-bottom-color: #FFF;
	&:after
		right: -5px;
		top: -1px;
		border-color: #FFF;
		border-bottom-color: transparent;
	&:active
		opacity: 0.7
		border-width \
			/* Top border, from 0 to push width: Transparent:
			 Only necessary to compensate for the now decreased bottom border width.
			 This could also be achieved e.g. with a margin, but margins are
			 often overwritten for layout purposes */ \
			$push_in_width \
			/* Right border: decreased */ \
			$right_border_width - $push_in_width \
			/* Bottom border: decreased */ \
			$bottom_border_width - $push_in_width \
			/* Left border: Compensate for decreased right border (equiv.) */ \
			$push_in_width
		&:before
			bottom -3px
			left -2px
		&:after
			right -3px
			top -2px
	/*********************************/

textarea, select, input {
	color: #4a4a4a;
	padding: 6px 10px;
	/* The 6px vertically centers text on FF, ignored by Webkit */
	background-color: #f1f1f1;
	border: none;
	box-shadow: none;
	box-sizing: border-box; }
	textarea:focus, select:focus, input[type]:focus {
		border: 1px solid var(--color-border);
		outline: 0; }

input[type="checkbox"]:focus {
	outline: 1px dotted var(--color-border); }

legend, label {
	display: inline-block;
}
legend {
	font-weight: 600; }

progress
	border none /* FF */
	-webkit-appearance none /* chrome */
	appearance none // idk
	&::-webkit-progress-value /* chrome */
		background var(--color-main)
	&::-moz-progress-bar /* FF */ // for some reason, this cant be on the same line as above. no idea why, might be a bug.
		background var(--color-main)
	&::-webkit-progress-bar /* chrome */, & /* FF */
		background var(--color-disabled)